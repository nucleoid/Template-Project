@using Microsoft.Web.Helpers
@using TemplateProject.Web.Mvc.Areas.Admin.Controllers
@using TemplateProject.Web.Mvc.Extensions
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head id="Head1" runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />

    <link href="@Url.Content("/Content/Site.css")" rel="stylesheet" type="text/css" />

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <script src="http://ajax.microsoft.com/ajax/jQuery/jquery-1.6.1.min.js" type="text/javascript"></script>    
    <script src="@Url.Content("/Content/js/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="http://ajax.microsoft.com/ajax/jQuery.Validate/1.7/jQuery.Validate.min.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <script src="@Url.Content("/Content/js/NameValidation.js")" type="text/javascript"></script>
    <title>@ViewBag.Title</title>    
</head>

<body>
    <div class="page">
        <div id="mainContent">
            <div class="columnsContainer">
                <div class="leftColumn">
                    <p>
                        <img src="@Url.Content("/Content/img/tracks.png")" />
                    </p>
                    <h2>TemplateProject Pages</h2>
                    <ul>
                        <li>@(Html.ActionLinkArea<HomeController>(c => c.Index(), "Home", null))</li>
                        <li>@(Html.ActionLinkArea<CategoriesController>(c => c.Index(), "Admin Categories", "Admin"))</li>
                        <li>@(Html.ActionLinkArea<ProductsController>(c => c.Index(null), "Admin Products", "Admin"))</li>
                    </ul>
                </div>

                <div class="rightColumn">
                    @RenderBody()
                </div>

                <div class="clear">
                </div>

            </div>

            <div id="sharpArchLogo"></div>

        </div>

    </div>
</body>
</html>
